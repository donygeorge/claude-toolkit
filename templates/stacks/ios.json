{
  "_meta": {
    "name": "ios",
    "description": "iOS/Swift stack: Xcode build, SwiftLint, simulator testing",
    "required_tools": ["xcodebuild", "swift", "swiftlint"]
  },
  "permissions": {
    "allow": [
      "Bash(xcodebuild:*)",
      "Bash(swift:*)",
      "Bash(codesign:*)",
      "Bash(swiftlint:*)",
      "Bash(xcrun simctl:*)",
      "Bash(xcrun:*)",
      "Bash(make build:*)",
      "Bash(make test:*)",
      "Bash(make lint:*)",
      "Bash(make fmt:*)"
    ]
  }
}
