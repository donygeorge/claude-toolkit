{
  "env": {
    "CLAUDE_CODE_AUTOCOMPACT_PCT_OVERRIDE": "65",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "PROJECT_CUSTOM_VAR": "hello"
  },
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.claude/toolkit/hooks/guard-destructive.sh",
            "timeout": 10000,
            "type": "command"
          },
          {
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/project-guard.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "Bash"
      },
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.claude/toolkit/hooks/guard-sensitive-writes.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "Write"
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.claude/toolkit/hooks/setup.sh",
            "timeout": 15000,
            "type": "command"
          },
          {
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/project-setup.sh",
            "timeout": 10000,
            "type": "command"
          }
        ],
        "matcher": "startup"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(make:*)",
      "Read(artifacts/**)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(.venv/bin/*:*)",
      "Bash(ruff:*)",
      "Bash(make test:*)",
      "Bash(docker:*)",
      "Bash(sqlite3:*)"
    ],
    "deny": [
      "Edit(~/.ssh/*)",
      "Read(.env)"
    ]
  }
}
